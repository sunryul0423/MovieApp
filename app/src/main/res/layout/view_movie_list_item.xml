<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable name="mainViewModel"
                  type="com.movie.model.view.MainViewModel"/>
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:id="@+id/ll_list_item"
                  android:layout_width="@dimen/main_list_item_width"
                  android:layout_height="wrap_content"
                  android:layout_marginEnd="@dimen/main_back_drop_padding"
                  android:layout_marginStart="@dimen/main_back_drop_padding"
                  android:gravity="center_horizontal"
                  android:orientation="vertical">

        <ImageView
                android:id="@+id/iv_movie_poster"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="@null"/>

        <TextView
                android:id="@+id/tv_movie_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/main_list_title"
                android:ellipsize="end"
                android:maxLines="1"/>

        <TextView
                android:id="@+id/tv_vote_average"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/main_list_vote"
                android:drawableStart="@drawable/baseline_star_black"
                android:drawableTint="@color/image_star"/>

    </LinearLayout>
</layout>
